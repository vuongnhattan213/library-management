@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/HomeLayout.cshtml";
}

<div class="container mt-5">
    <h1 class="mb-4">Home</h1>

    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Users</h5>
                    <p class="card-text">Manage users in the library system.</p>
                    <a asp-controller="User" asp-action="Index" class="btn btn-primary">Go to Users</a>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Products</h5>
                    <p class="card-text">Manage products (books) in the library system.</p>
                    <a asp-controller="Product" asp-action="Index" class="btn btn-primary">Go to Products</a>
                </div>
            </div>
        </div>
    </div>
</div>